<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/write_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Review"
        android:textSize="25dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_below="@id/write_title"
        android:id="@+id/choose_title"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Choose the movie you want to write a review for!! "/>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Movie"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/choose_title"
        android:textColorHint="#05ab9a"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the movie name"
        android:id="@+id/Enter_movie"
        android:textColorHint="#05ab9a"
        android:gravity="center_horizontal"
        android:layout_below="@id/choose_title"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        android:text="Done"
        android:textSize="15dp"
        android:layout_below="@id/choose_title"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/add"
        app:rippleColor="@color/black"
        android:layout_margin="16dp"
        />

</RelativeLayout>